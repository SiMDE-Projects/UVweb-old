{% extends "UvwebUvBundle:Unis:all_list_layout.html.twig" %}

{% block title %}
	Toutes UVs {% if categoryName is defined %}{{ categoryName }}{% endif %} (Ordre Alphabétique) - {{ parent() }}
{% endblock %}


{% block pageHeader %}		
	<h2>{{ uni.name }} - {% if categoryName is defined and categoryName != '' %}{{ categoryName }} : {% endif %}Toutes les UVs <small>Ordre Alphabétique</small></h2>
{% endblock %}

{% block column1 %}
	{% for ceilRate, uvs in groupedUvs %}
		{% if loop.index % 4  == 1 %}
			{% set tableType = 'error' %}
			{% if ceilRate > 5 %}
				{% set tableType = 'success' %}
			{% endif %}
			{% include 'UvwebUvBundle:Common:uv_table.html.twig' with { 'highlightRates': true, 'tableType': tableType, 'uvs': uvs, 'title': ceilRate } %}
		{% endif %}
	{% endfor %}
{% endblock %}

